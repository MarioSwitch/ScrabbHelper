<resources>
    <!-- Base application theme. -->
    <style name="Theme.Scrabble" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_scrabble_2</item>
        <item name="colorPrimaryVariant">@color/green_scrabble_3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="result_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="result_title_red">
        <item name="android:textColor">@color/red_day</item>
    </style>
    <style name="result_title_green">
        <item name="android:textColor">@color/green_scrabble_1</item>
    </style>
    <style name="result_content">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="icon">
        <item name="tint">@color/black</item>
    </style>
</resources>